WHICH=0

# Look for Qt5 on Linux
QT_INC=`find /usr/include -name qt5 | head -1`
QT_LIB=`echo $QT_INC | sed "s/include/lib/"`

if [[ "$QT_INC" != "" && "$QT_LIB" != "" ]]; then
	WHICH=5
fi

if [[ "$QT_INC" == "" || "$QT_LIB" == "" ]]; then
	# Qt on MacOS w/Homebrew
	if [[ $(uname -o) == "Darwin" ]]; then
		QT_INC=/opt/homebrew/include
		if [ ! -d $QT_INC ]; then
			QT_INC=
		else
			QT_LIB=/opt/homebrew/lib
			if [ ! -d $QT_LIB ]; then
				QT_LIB=
			fi
		fi
	fi
fi

if [[ "$QT_INC" == "" || "$QT_LIB" == "" ]]; then
	echo You will need to install Qt to continue.
	rm -f Makefile-config
else
	if [[ "$WHICH" != "0" ]]; then
		echo Detected Qt$WHICH.
	else
		echo "Detected unknown Qt on Mac."
	fi
	echo QT_INC=$QT_INC > Makefile-config
	echo QT_LIB=$QT_LIB >> Makefile-config
fi

# Look for swiftc
if ( which swiftc > /dev/null ); then
	echo "Detected Swift compiler."
else
	echo "Missing Swift compiler."
fi
